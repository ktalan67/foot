{% extends 'base.html.twig' %}

{% block title %}Match{% endblock %}

{% block body %}
    <h1>Match</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ match.score }}</td>
            </tr>
            <tr>
                <th>Fouls</th>
                <td>{{ match.fouls }}</td>
            </tr>
            <tr>
                <th>Penalty</th>
                <td>{{ match.penalty }}</td>
            </tr>
            <tr>
                <th>Yellowcard</th>
                <td>{{ match.yellowcard }}</td>
            </tr>
            <tr>
                <th>Redcard</th>
                <td>{{ match.redcard }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('match_index') }}">back to list</a>

    <a href="{{ path('match_edit', {'id': match.id}) }}">edit</a>

    {{ include('match/_delete_form.html.twig') }}
{% endblock %}
