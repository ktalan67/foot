{% extends 'base.html.twig' %}

{% block title %}Match index{% endblock %}

{% block body %}
    <h1>Match index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Score</th>
                <th>Fouls</th>
                <th>Penalty</th>
                <th>Yellowcard</th>
                <th>Redcard</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for match in matches %}
            <tr>
                <td>{{ match.id }}</td>
                <td>{{ match.score }}</td>
                <td>{{ match.fouls }}</td>
                <td>{{ match.penalty }}</td>
                <td>{{ match.yellowcard }}</td>
                <td>{{ match.redcard }}</td>
                <td>
                    <a href="{{ path('match_show', {'id': match.id}) }}">show</a>
                    <a href="{{ path('match_edit', {'id': match.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('match_new') }}">Create new</a>
{% endblock %}
