{% extends 'base.html.twig' %}

{% block title %}Championship index{% endblock %}

{% block body %}
    <h1>Championship index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for championship in championships %}
            <tr>
                <td>{{ championship.id }}</td>
                <td>{{ championship.name }}</td>
                <td>{{ championship.country }}</td>
                <td>
                    <a href="{{ path('championship_show', {'id': championship.id}) }}">show</a>
                    <a href="{{ path('championship_edit', {'id': championship.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('championship_new') }}">Create new</a>
{% endblock %}
